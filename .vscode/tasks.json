{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "simple dotnet run",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet run --project ${workspaceFolder}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "close": true,
                "revealProblems": "onProblem"
            }
        },
		{
			"label": "custom csharp build",
			"type": "shell",
			"group": "build",
            "command": "dotnet",
            "args": [
                "build",
                "${relativeFileDirname}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true,
                "close": true
			},
            "problemMatcher": "$msCompile"
		}
    ]
}